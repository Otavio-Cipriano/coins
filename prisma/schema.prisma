generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource coins {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model QueryHistory{
  id Int @id @default(autoincrement())
  coin String @unique
  currencies Currency[]
  last_updated String
  created_at DateTime @default(now())

  @@map("queries_history")
}

model Currency{
  id Int @id @default(autoincrement())
  name String
  value Decimal
  created_at DateTime @default(now())
  queriedAt QueryHistory @relation(fields: [queryHistoryId], references: [id])
  queryHistoryId Int

  @@map("currencies")
}


model SupportedCoin{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())

  @@map("supported_coins")
}

model SupportedCurrencie{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())

  @@map("supported_currencies")
}