// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Query{
  id Int @id @default(autoincrement())
  coin String
  currencies Currency[]
  created_at DateTime @default(now())

  @@map("queries")
}

model Currency{
  id Int @id @default(autoincrement())
  name String
  value Decimal
  QueryHistory Query? @relation(fields: [queryId], references: [id])
  queryId Int?

  @@map("currencies")
}

model SupportedCoin{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())

  @@map("supported_coins")
}

model SupportedCurrencie{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())

  @@map("supported_currencies")
}